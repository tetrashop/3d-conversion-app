{
  "name": "3d-conversion-app",
  "version": "1.0.0",
  "description": "Complete 2D to 3D conversion system",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:*\"",
    "dev:conversion": "cd packages/conversion-api && npm run dev",
    "build": "npm run build:*",
    "deploy": "npm run deploy:*",
    "deploy:api": "cd packages/conversion-api && npm run deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
